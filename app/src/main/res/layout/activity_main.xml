<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스르륵"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/favoriteTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="즐겨 찾기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/titleTextView"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/favoriteGroupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/favoriteTitleTextView"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/groupTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 4"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/favoriteGroupContainer"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/groupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/groupTitleTextView"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"/>

</RelativeLayout>