<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/title_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="즐겨 찾기"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/logo"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite_group_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/title_favorite"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/group_icon_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_ex_group1"
                android:layout_alignParentStart="true"
                android:contentDescription="Group Icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/group_icon_2"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="핀인코 - 돈가스"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024.07.13"
                    android:textSize="14sp"
                    android:textColor="#888888" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="멤버 : 6명"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/star_button_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/settle_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정산 하기"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1927EC"
                android:background="@drawable/rounded_corner"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/star_button_2"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/favorite_group_card"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text_group_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/title_group"
        android:layout_alignBottom="@id/title_group"
        android:layout_marginStart="16dp"
        android:textColor="#1F28A4" />

    <ImageView
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/title_group"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/button_add" />

    <ImageView
        android:id="@+id/button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pencil"
        android:layout_toStartOf="@id/button_add"
        android:layout_alignBottom="@id/title_group"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/button_edit" />

    <ScrollView
        android:id="@+id/group_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/button_add"
        android:layout_above="@id/navigation_bar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/group_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/group_icon_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ex_group3"
                        android:layout_alignParentStart="true"
                        android:contentDescription="Group Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/group_icon_1"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HNRC"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.03.22"
                            android:textSize="14sp"
                            android:textColor="#888888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="멤버 : 10명"
                            android:textSize="14sp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/star_button_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_outline"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/settle_button_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정산 하기"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#1927EC"
                        android:background="@drawable/rounded_corner"
                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@id/star_button_1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:gravity="center" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/group_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/group_icon_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ex_group1"
                        android:layout_alignParentStart="true"
                        android:contentDescription="Group Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/group_icon_2"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="핀인코 - 돈가스"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.07.13"
                            android:textSize="14sp"
                            android:textColor="#888888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="멤버 : 6명"
                            android:textSize="14sp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/star_button_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/settle_button_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정산 하기"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#1927EC"
                        android:background="@drawable/rounded_corner"
                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@id/star_button_2"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:gravity="center" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/group_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/group_icon_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ex_group2"
                        android:layout_alignParentStart="true"
                        android:contentDescription="Group Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/group_icon_3"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="개발 2팀"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.08.13"
                            android:textSize="14sp"
                            android:textColor="#888888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="멤버 : 8명"
                            android:textSize="14sp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/star_button_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_outline"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/settle_button_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정산 하기"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#1927EC"
                        android:background="@drawable/rounded_corner"
                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@id/star_button_3"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:gravity="center" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/group_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/group_icon_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ex_group4"
                        android:layout_alignParentStart="true"
                        android:contentDescription="Group Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/group_icon_4"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조김이최"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.08.20"
                            android:textSize="14sp"
                            android:textColor="#888888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="멤버 : 4명"
                            android:textSize="14sp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/star_button_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_outline"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/settle_button_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정산 하기"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#1927EC"
                        android:background="@drawable/rounded_corner"
                        android:layout_alignParentBottom="true"
                        android:layout_toStartOf="@id/star_button_4"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:gravity="center" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/navigation_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:contentDescription="@string/icon_home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/icon_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my"
                android:contentDescription="@string/icon_my"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>